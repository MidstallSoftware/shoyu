#pragma once

#if !defined (__SHOYU_COMPOSITOR_H_INSIDE__) && !defined (SHOYU_COMPOSITOR_COMPILATION)
#error "Only <shoyu-compositor/shoyu-compositor.h> can be included directly."
#endif

#include <glib.h>
#include <shoyu-compositor/version/versionmacros.h>

G_BEGIN_DECLS

/**
 * SHOYU_COMPOSITOR_MAJOR_VERSION:
 *
 * Like [func@get_major_version], but from the headers used at
 * application compile time, rather than from the library linked
 * against at application run time.
 */
#define SHOYU_COMPOSITOR_MAJOR_VERSION (@SHOYU_COMPOSITOR_MAJOR_VERSION@)

/**
 * SHOYU_COMPOSITOR_MINOR_VERSION:
 *
 * Like [func@get_minor_version], but from the headers used at
 * application compile time, rather than from the library linked
 * against at application run time.
 */
#define SHOYU_COMPOSITOR_MINOR_VERSION (@SHOYU_COMPOSITOR_MINOR_VERSION@)

/**
 * SHOYU_COMPOSITOR_MICRO_VERSION:
 *
 * Like [func@get_micro_version], but from the headers used at
 * application compile time, rather than from the library linked
 * against at application run time.
 */
#define SHOYU_COMPOSITOR_MICRO_VERSION (@SHOYU_COMPOSITOR_MICRO_VERSION@)

/**
 * SHOYU_COMPOSITOR_BINARY_AGE:
 *
 * Like [func@get_binary_age], but from the headers used at
 * application compile time, rather than from the library linked
 * against at application run time.
 */
#define SHOYU_COMPOSITOR_BINARY_AGE    (@SHOYU_COMPOSITOR_BINARY_AGE@)

/**
 * SHOYU_COMPOSITOR_INTERFACE_AGE:
 *
 * Like [func@get_interface_age], but from the headers used at
 * application compile time, rather than from the library linked
 * against at application run time.
 */
#define SHOYU_COMPOSITOR_INTERFACE_AGE (@SHOYU_COMPOSITOR_INTERFACE_AGE@)

/**
 * SHOYU_COMPOSITOR_CHECK_VERSION:
 * @major: major version (e.g. 1 for version 1.2.5)
 * @minor: minor version (e.g. 2 for version 1.2.5)
 * @micro: micro version (e.g. 5 for version 1.2.5)
 *
 * Returns %TRUE if the version of the SHOYU_COMPOSITOR header files
 * is the same as or newer than the passed-in version.
 *
 * Returns: %TRUE if SHOYU_COMPOSITOR headers are new enough
 */
#define SHOYU_COMPOSITOR_CHECK_VERSION(major,minor,micro)                          \
    (SHOYU_COMPOSITOR_MAJOR_VERSION > (major) ||                                   \
     (SHOYU_COMPOSITOR_MAJOR_VERSION == (major) && SHOYU_COMPOSITOR_MINOR_VERSION > (minor)) || \
     (SHOYU_COMPOSITOR_MAJOR_VERSION == (major) && SHOYU_COMPOSITOR_MINOR_VERSION == (minor) && \
      SHOYU_COMPOSITOR_MICRO_VERSION >= (micro)))

SHOYU_COMPOSITOR_AVAILABLE_IN_ALL
guint shoyu_compositor_get_major_version(void) G_GNUC_CONST;
SHOYU_COMPOSITOR_AVAILABLE_IN_ALL
guint shoyu_compositor_get_minor_version(void) G_GNUC_CONST;
SHOYU_COMPOSITOR_AVAILABLE_IN_ALL
guint shoyu_compositor_get_micro_version(void) G_GNUC_CONST;
SHOYU_COMPOSITOR_AVAILABLE_IN_ALL
guint shoyu_compositor_get_binary_age(void) G_GNUC_CONST;
SHOYU_COMPOSITOR_AVAILABLE_IN_ALL
guint shoyu_compositor_get_interface_age(void) G_GNUC_CONST;

SHOYU_COMPOSITOR_AVAILABLE_IN_ALL
const char* shoyu_compositor_check_version (guint required_major, guint required_minor, guint required_micro);

G_END_DECLS
